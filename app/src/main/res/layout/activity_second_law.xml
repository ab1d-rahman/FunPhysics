<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abid.funphysicsnewtonslawsofmotion.SecondLawActivity"
    android:background="@drawable/general_background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example With Animation for Variable Force and Equal Mass"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/secondLawForceButton"
        android:onClick="onClickSecondLawForceAnimation"
        android:layout_above="@+id/secondLawMassButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example With Animation For Variable Mass and Equal Force"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/secondLawMassButton"
        android:onClick="onClickSecondLawMassAnimation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/secondLawText"
        android:textColor="@android:color/white"
        android:textAlignment="gravity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
