<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abid.funphysicsnewtonslawsofmotion.LawsActivity"
    android:background="@drawable/general_background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Law"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/firstLawButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:onClick="onClickFirstLaw" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Law"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/secondLawButton"
        android:layout_below="@+id/firstLawButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onClickSecondLaw"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Law"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/thirdLawButton"
        android:layout_below="@+id/secondLawButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="onClickThirdLaw" />

</RelativeLayout>
